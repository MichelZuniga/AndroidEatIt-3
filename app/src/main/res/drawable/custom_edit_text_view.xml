<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="4dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="#fff"/>
        </shape>
    </item>
</selector>